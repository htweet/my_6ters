<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <div class="panel panel-default no-border">
        <div class="panel-body">
          <section class="user_info">
            <h1>
              <%= gravatar_for @user %>
              <%= @user.name %>
            </h1>
            <%= render 'follow_form' if logged_in? %>
          </section>
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
        </div>
      </div>
    </aside>


    <div class="col-md-6 mp bg">
      <% if @user.microposts.any? %>
        <h3>Statuses <%= @user.microposts.count %></h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        
      <% else %>

        <div class="panel panel-default">
          <div class="panel-body">
            <h1><small>Follow at least 5 People to start enjoying 6TERS</small></h1>
          </div>
        </div>



        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>