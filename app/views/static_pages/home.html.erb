<% if logged_in? %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-6">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="center jumbotron">
	  <h1>Welcome to 6TERS,</br><small>(it's all about Dating)</small></h1>


	  <h2>
	    This is the home page for the
	    <a href="https://my6ters.herokuapp.com/">6TERS</a>
	    online social app for worldwide communication.
	  </h2>

	  <%= link_to "Sign Up!", signup_path, class: "btn btn-lg btn-primary btn-sm" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails logo"),
	            'http://rubyonrails.org/' %>
</div>
<% end %>