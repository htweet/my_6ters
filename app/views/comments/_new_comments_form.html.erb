<%= form_for(:comment, url: '/comments', html: { multipart: true }) do |f| %>

		  <div class="form-group comment-form">
		    <%= f.text_area :content, placeholder: "Write comment...", class: "form-control" %>
		    <%= f.submit "comment", class: "btn btn-primary comment-btn" %>
		  </div>
		    
	<% end %>